{
  "$schema": "https://raw.githubusercontent.com/yourusername/obsidian-readlater/main/config.schema.json",
  "description": "Example configuration using 1Password CLI for all credentials",
  "outputFile": "ReadLater/Clippings.md",
  "appendMode": true,
  "vaultPath": "/Users/yourname/Documents/ObsidianVault",
  "gitSync": true,
  "providers": {
    "wired": {
      "enabled": true,
      "credentials": {
        "username": "op://Private/Wired/username",
        "password": "op://Private/Wired/password"
      }
    },
    "guardian": {
      "enabled": true,
      "credentials": {
        "username": "op://Private/Guardian/username",
        "password": "op://Private/Guardian/password"
      }
    },
    "hbr": {
      "enabled": true,
      "credentials": {
        "username": "op://Work/HBR Subscription/username",
        "password": "op://Work/HBR Subscription/password"
      }
    }
  }
}
